{
  "name": "tocbot",
  "version": "1.0.6",
  "description": "Generate a table of contents based on the heading structure of a html document.",
  "main": "src/js/index.js",
  "scripts": {
    "build": "npm run clean && npm run mkdirs && npm run build:js & build:css & npm run copy:static",
    "clean": "rm -rf build/ && rm -rf dist/",
    "mkdirs": "npm run mkdir:build & npm run mkdir:dist",
    "mkdir:build": "mkdir build && cd build && mkdir assets && cd assets && mkdir js && mkdir css",
    "mkdir:dist": "mkdir dist",
    "build:css": "node-sass --output-style compressed -o build/assets/css src/scss",
    "build:js": "browserify src/js/index.js -o build/assets/js/tocbot.js",
    "build:uglify:js": "npm run lint && browserify src/js/index.js | uglifyjs -mc > build/assets/js/tocbot.js",
    "copy:static": "cp -r src/files/* build/",
    "lint": "eslint src/js",
    "dev": "npm run serve & npm run watch:css & npm run watch:js",
    "serve": "browser-sync start --server ./ --files 'build/assets/css/*.css, build/assets/js/*.js'",
    "watch:css": "onchange 'src/scss/*.scss' -- npm run build:css",
    "watch:js": "onchange 'src/js/*.js' -- npm run build:js",
    "start": "npm run build && npm run dev",
    "deploy": "npm run build && gh-pages -d build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tscanlin/tocbot.git"
  },
  "keywords": [
    "tocbot",
    "javascript",
    "table",
    "of",
    "contents",
    "generate",
    "html",
    "structure",
    "vanilla"
  ],
  "author": "Tim Scanlin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tscanlin/tocbot/issues"
  },
  "homepage": "https://github.com/tscanlin/tocbot#readme",
  "devDependencies": {
    "babel-eslint": "^6.0.0",
    "babel-runtime": "^6.3.19",
    "browser-sync": "^2.10.1",
    "browserify": "^13.0.0",
    "chai": "^3.4.1",
    "eslint": "^2.4.0",
    "js-yaml": "^3.4.6",
    "mocha": "^2.3.4",
    "mochatron": "^1.0.7",
    "node-sass": "^3.4.2",
    "nunjucks": "^2.4.1",
    "onchange": "^2.2.0",
    "optimizely-oui": "^9.0.8",
    "uglify-js": "^2.6.2"
  },
  "dependencies": {
    "highlight.js": "^9.0.0",
    "smooth-scroll": "cferdinandi/smooth-scroll"
  }
}
